{% extends 'layouts/page.njk' %}

{% block pageTitle %}Unauthorized Access{% endblock %}

{% block content %}
<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <h1 class="govuk-heading-xl">Unauthorized Access</h1>
    <p class="govuk-body">You do not have permission to access this service.</p>
    <p class="govuk-body">This service is only available to users from the following domains: {{ allowedDomains if allowedDomains else 'Defra' }}.</p>
    <p class="govuk-body">If you believe you should have access, please contact your system administrator.</p>
  </div>
</div>
{% endblock %}